Package: MPRAnalyze
Type: Package
Title: Statistical Analysis of MPRA data
Version: 1.9.1
Authors@R: c(
	person('Tal', 'Ashuach', NULL, 'tal_ashuach@berkeley.edu', c('aut', 'cre')),
